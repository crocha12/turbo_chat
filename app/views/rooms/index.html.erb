<div class="p-8">
  <h1 class="text-2xl font-bold mb-4">Selecione uma sala</h1>

  <% @rooms.each do |room| %>
    <div class="flex items-center justify-between mb-2">
      <p class="text-lg">
        <%= link_to room.name, room, class:"text-blue-500 hover:underline" %>
      </p>
      <p>
        <%= link_to 'Editar', edit_room_path(room), class:"text-gray-500 hover:text-blue-500" %>
      </p>
    </div>
  <% end %>

  <div class="flex mt-4 justify-between">
    <%= link_to 'Nova sala', new_room_path, class:"inline-block px-4 py-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600" %>
    <%= link_to 'Sair', destroy_user_session_path, class:"inline-block px-4 py-2 bg-red-500 text-white font-semibold rounded-md hover:bg-red-600", data: { turbo_method: :delete } %>
  </div>
</div>