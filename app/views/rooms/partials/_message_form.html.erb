<div class="p-4 bg-gray-200">
  <%= form_with model: Message.new, html: { class: "flex items-center w-full" } do |form| %>
    <%= form.hidden_field :room_id, value: @room.id %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.text_field :content, class: "flex-1 bg-white border border-gray-300 rounded-md py-2 px-4 focus:outline-none focus:ring focus:border-blue-300 w-full" %>
    <%= form.submit 'Enviar', class: "ml-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md" %>
  <% end %>
  </div>