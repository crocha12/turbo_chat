<div class="p-8">
  <h2 class="text-2xl font-bold mb-4 text-center">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "max-w-md mx-auto" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block mb-2 text-lg font-medium text-gray-700" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <div class="mt-8">
      <%= f.submit "Send me reset password instructions", class: "w-full py-3 px-4 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
