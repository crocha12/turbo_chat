<div class="p-8">
  <h2 class="text-2xl font-bold mb-4 text-center">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "max-w-md mx-auto" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :username, class: "block mb-2 text-lg font-medium text-gray-700" %>
      <%= f.text_field :username, autofocus: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block mb-2 text-lg font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block mb-2 text-lg font-medium text-gray-700" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block mb-2 text-lg font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <div class="mt-8">
      <%= f.submit "Sign up", class: "w-full py-3 px-4 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
