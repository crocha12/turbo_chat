<div class="p-8">
  <h2 class="text-2xl font-bold mb-4 text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "max-w-md mx-auto" }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block mb-2 text-lg font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block mb-2 text-lg font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <label class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2 border-gray-300 rounded focus:outline-none focus:ring" %>
          <span class="text-lg text-gray-700">Remember me</span>
        </label>
      </div>
    <% end %>

    <div class="mt-8">
      <%= f.submit "Log in", class: "w-full py-3 px-4 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
